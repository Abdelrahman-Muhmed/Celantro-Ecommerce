@model EcommerceCoffe_DAL.Models.Product.ProductCategory

@{
    ViewBag.Title = "Details";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@Model.Name Details</h2>
    <div class="card shadow-sm">
        <div class="row no-gutters">
            <div class="col-md-6">
                @if (!string.IsNullOrEmpty(Model.PictureUrl))
                {
                    <img src="@Url.Content(Model.PictureUrl)" alt="Product Image" class="img-fluid rounded-start" />
                }
                else
                {
                    <p class="text-center p-5">No image available</p>
                }
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(model => model.Name)</h4>
                    <p class="card-text">
                        <strong>Description:</strong> @Html.DisplayFor(model => model.Description)
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        @Html.ActionLink("Back to Home", "Index", null, new { @class = "btn btn-secondary mx-2" })
    </div>
</div>
