<div class="container">
    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { @class = "mt-5 form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>@HttpContext.GetGlobalResourceObject("Resources", "CreateProduct")</h4>
            <hr />

            @* Name *@
            <div class="form-group row">
                @Html.LabelFor(model => model.Name, (string)HttpContext.GetGlobalResourceObject("Resources", "Name"), htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            @* Description *@
            <div class="form-group row">
                @Html.LabelFor(model => model.Description, (string)HttpContext.GetGlobalResourceObject("Resources", "Description"), htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 5 })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            @* Price *@
            <div class="form-group row">
                @Html.LabelFor(model => model.Price, (string)HttpContext.GetGlobalResourceObject("Resources", "Price"), htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control", type = "number", min = 0, step = "0.01" })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>
            </div>

            @* Brand *@
            <div class="form-group row">
                @Html.LabelFor(model => model.BrandId, (string)HttpContext.GetGlobalResourceObject("Resources", "Brand"), htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.DropDownList("BrandId", null, (string)HttpContext.GetGlobalResourceObject("Resources", "SelectBrand"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BrandId, "", new { @class = "text-danger" })
                </div>
            </div>

            @* Category *@
            <div class="form-group row">
                @Html.LabelFor(model => model.CategoryId, (string)HttpContext.GetGlobalResourceObject("Resources", "Category"), htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.DropDownList("CategoryId", null, (string)HttpContext.GetGlobalResourceObject("Resources", "SelectCategory"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>
            </div>

            @* Image Upload *@
            <div class="form-group row">
                @Html.LabelFor(model => model.ImageFile, (string)HttpContext.GetGlobalResourceObject("Resources", "ProductImage"), htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
                <div class="col-md-10">
                    <input type="file" name="ImageFile" accept="image/*" class="form-control-file" />
                    @Html.ValidationMessageFor(model => model.ImageFile, "", new { @class = "text-danger" })
                </div>
            </div>

            @* Submit Button *@
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@HttpContext.GetGlobalResourceObject("Resources", "CreateButton")" class="button" />
                </div>
            </div>
        </div>
    }

    @Html.ActionLink((string)HttpContext.GetGlobalResourceObject("Resources", "BackToHome"), "Index", null, new { @class = "btn btn-secondary mx-2" })
</div>