@using EcommerceCoffee.Controllers
@{
    bool isLoggedIn = Session["UserName"] != null;
    string currentCulture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
    bool isRTL = System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft;
}
<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName" dir="@(isRTL ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

    <!-- Conditional Bootstrap CSS for RTL -->
    @if (isRTL)
    {
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    }
    else
    {
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    }

    <link href="~/Content/Home/Products.css" rel="stylesheet" />
    <link href="~/Content/Home/form.css" rel="stylesheet" />
    <link href="~/Content/Home/footer.css" rel="stylesheet" />
    <link href="~/Content/Home/Order.css" rel="stylesheet" />
    <link href="~/WebFonts/fontawesome-free-6.4.0-web/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/Home/nav.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

    @if (isRTL)
    {
        <link href="~/Content/Home/rtl.css" rel="stylesheet" />
    }
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-3">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Product")">
                <span class="fw-bold">@Resources.Resources.BrandName</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="@Resources.Resources.ToggleNavigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink(Resources.Resources.Navbar_Home, "Index", "Product", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink(Resources.Resources.Navbar_Category, "Index", "Category", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink(Resources.Resources.Navbar_Users, "Index", "Account", null, new { @class = "nav-link" })
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <!-- Cart Icon Link -->
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Basket")" class="nav-link cart-icon" title="@Resources.Resources.Cart_Tooltip">
                            <i class="fa-solid fa-cart-shopping"></i>
                        </a>
                    </li>

                    <!-- Language Switcher Links -->
                    <li class="nav-item">
                        @Html.ActionLink(Resources.Resources.Navbar_English, "SetLanguage", "Language", new { culture = "en-US" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink(Resources.Resources.Navbar_Arabic, "SetLanguage", "Language", new { culture = "ar-SA" }, new { @class = "nav-link" })
                    </li>

                    <!-- User Authentication Links -->
                    @if (isLoggedIn)
                    {
                        <li class="nav-item">
                            @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit();" class="nav-link">@Resources.Resources.Navbar_Logout</a>
                            }
                        </li>
                        <li class="nav-item">
                            <span class="nav-link">@string.Format(Resources.Resources.Navbar_Welcome, Session["UserName"])</span>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink(Resources.Resources.Navbar_JoinUs, "Register", "Account", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink(Resources.Resources.Navbar_Login, "Login", "Account", null, new { @class = "nav-link" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="m-5">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer py-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <h5>@Resources.Resources.Footer_ContactUs</h5>
                    <p><i class="fab fa-facebook-f"></i> <a href="http://www.example.com">www.example.com</a></p>
                    <p><i class="fab fa-twitter"></i> <a href="mailto:info@example.com">info@example.com</a></p>
                    <p><i class="fab fa-instagram"></i> 123 6th St. Melbourne, FL 32904</p>
                    <p><i class="fab fa-youtube"></i> YouTube</p>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <h5>@Resources.Resources.Footer_AboutUs</h5>
                    <p>@Resources.Resources.Footer_AboutText</p>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <h5>@Resources.Resources.Footer_BusinessHours</h5>
                    <p>@Resources.Resources.Footer_HoursMonFri</p>
                    <p>@Resources.Resources.Footer_HoursSat</p>
                    <p>@Resources.Resources.Footer_HoursSun</p>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>@Resources.Resources.Footer_Copyright</p>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/GlobalVal")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/ajax")

    @RenderSection("scripts", required: false)
</body>
</html>
